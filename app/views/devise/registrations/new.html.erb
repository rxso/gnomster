<div class="booyah-box col-xs-6 col-xs-offset-3">

  <h2>Create Account</h2>
  <br/>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="col-xs-6">
      <h4><%= f.input :firstname, required: true, autofocus: true %></h4>
    </div>
    <div class="col-xs-3">
      <h4><%= f.input :lastname, required: true, autofocus: true  %></h4>
    </div>
    <div class="col-xs-6">
      <h4><%= f.input :username, required: true, autofocus: true  %></h4>
    </div>
    <div class="col-xs-6">
      <h4><%= f.input :avatar, multiple: true %></h4>
    </div>
    <div class="clear"></div>
    <div class="col-xs-12">
      <h4><%= f.input :email, required: true, autofocus: true %></h4>
    </div>
    <div class="col-xs-12">
      <h4><%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %></h4>
    </div>
    <div class="col-xs-12">
      <h4><%= f.input :password_confirmation, required: true %></h4>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Register', class: 'btn btn-primary' %>
  </div>
  <br/>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
